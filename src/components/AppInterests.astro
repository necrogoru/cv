---
import { t } from "i18next"

const interests: string[] = t('interests', { returnObjects: true }) as string[]
const interestsArray = Array.isArray(interests) ? interests : Object.values(interests)
---
<section class="mt-14">
  <h2 class="text-3xl font-semibold flex items-center gap-4 ">
    <span class="bg-yellow-500 flex items-center justify-center p-2">
      <i class="material-icons left">loyalty</i>
    </span>
    {t('titles.interests')}
  </h2>

  <p>
    {interestsArray.map((interest, index) => (
      <span>
        {(index != 0)? ' - ':''}{interest}
      </span>
    ))}
  </p>
</section>
